<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="blue_btn">
        <item name="android:background">@drawable/selector_btn_blue</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">#3d3d3d</item>
        <item name="android:layout_margin">5.0dip</item>
        <item name="android:padding">5.0dip</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowDy">2</item>
    </style>
    
         <!-- 定义一个样式，继承android系统的对话框样式 android:style/Theme.Dialog-->  
    <style name="Theme.FloatActivity" parent="android:style/Theme.Dialog">  
        <!-- float_box为我们定义的窗口背景-->  
        <item name="android:windowBackground">@drawable/jiasu</item>  
    </style>  

</resources>